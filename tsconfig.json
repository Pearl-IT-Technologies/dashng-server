{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"typeRoots": ["./node_modules/@types", "./types"],
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["../shared-repo/schema/*"]
		}
	},
	"include": ["src/**/*", "types"],
	"exclude": ["node_modules"]
}
